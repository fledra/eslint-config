{
  "name": "@fledra/eslint-config",
  "description": "One opinionated config for ESLint",
  "version": "2.3.0",
  "license": "MIT",
  "type": "module",
  "author": "Baran D. <baran@fledra.dev> (https://fledra.dev)",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fledra/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/fledra/eslint-config/issues"
  },
  "packageManager": "pnpm@10.18.0",
  "scripts": {
    "prepare": "husky",
    "build": "pnpm generate && tsup --clean --dts",
    "dev": "pnpx @eslint/config-inspector --config eslint.config.ts",
    "test": "vitest --run",
    "test:dev": "vitest",
    "generate": "tsx scripts/typegen.ts",
    "prepack": "pnpm build",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "bump": "pnpx changelogen@latest --release"
  },
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/markdown": "^6.6.0",
    "@stylistic/eslint-plugin": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint-flat-config-utils": "^2.1.4",
    "eslint-merge-processors": "^2.0.0",
    "eslint-plugin-antfu": "^3.1.1",
    "eslint-plugin-import-lite": "^0.3.0",
    "eslint-plugin-jsdoc": "^50.8.0",
    "eslint-plugin-jsonc": "^2.21.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-toml": "^0.12.0",
    "eslint-plugin-unicorn": "^58.0.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "eslint-plugin-vue": "^10.5.0",
    "eslint-plugin-yml": "^1.19.0",
    "eslint-processor-vue-blocks": "^2.0.0",
    "find-up-simple": "^1.0.1",
    "globals": "^16.4.0",
    "jsonc-eslint-parser": "^2.4.1",
    "local-pkg": "^1.1.2",
    "toml-eslint-parser": "^0.10.0",
    "vue-eslint-parser": "^10.2.0",
    "yaml-eslint-parser": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.18.8",
    "@typescript-eslint/typescript-estree": "^8.45.0",
    "@typescript-eslint/utils": "^8.45.0",
    "eslint": "^9.37.0",
    "eslint-typegen": "^2.3.0",
    "eslint-vitest-rule-tester": "^2.2.2",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^15.5.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "eslint": "^9.10.0"
  },
  "changelog": {
    "output": false,
    "hideAuthorEmail": true
  }
}
